{
    "app-id": "org.geogebra.GeoGebra",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "command": "geogebra",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--device=dri",
        "--socket=x11",
        "--filesystem=home"
    ],
    "modules": [
        {
            "name": "geogebra",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "file",
                    "path": "geogebra.desktop"
                },
                {
                    "type": "file",
                    "path": "geogebra-scalable.svg"
                },
                {
                    "type": "file",
                    "path": "appdata.xml"
                },
                {
                    "type": "script",
                    "dest-filename": "apply_extra",
                    "commands": [
                        "tar -jxvf GeoGebra-Linux-Portable-5-0-488-0.tar.bz2",
                        "rm -f GeoGebra-Linux-Portable-5-0-488-0.tar.bz2",
                        "/app/bin/cleanup-other-arches.sh"
                    ]
                },
                {
                    "type": "script",
                    "commands": ["exec /app/extra/GeoGebra-Linux-Portable-5-0-488-0/geogebra-portable \"$@\""],
                    "dest-filename": "geogebra.sh"
                },
                {
                    "type": "script",
                    "dest-filename": "cleanup-other-arches.sh",
                    "commands": [
                        "rm -rf /app/extra/GeoGebra-Linux-Portable-5-0-488-0/jre1.8.0_121-i686/"
                    ],
                    "only-arches": ["x86_64"]
                },
                {
                    "type": "script",
                    "dest-filename": "cleanup-other-arches.sh",
                    "commands": [
                        "rm -rf /app/extra/GeoGebra-Linux-Portable-5-0-488-0/jre1.8.0_121-x86_64/"
                    ],
                    "only-arches": ["i386"]
                },
                {
                    "type": "extra-data",
                    "filename": "GeoGebra-Linux-Portable-5-0-488-0.tar.bz2",
                    "only-arches": ["x86_64", "i386"],
                    "url": "https://download.geogebra.org/installers/5.0/GeoGebra-Linux-Portable-5-0-488-0.tar.bz2",
                    "sha256": "097ed1c0fad7b2d6c54c45fd3f47f340a8bc3ff1004584fd0d29aca91c111efd",
                    "size": 136627510
                }
            ],
            "build-commands": [
                "mkdir -p /app/bin",
                "install -Dm755 apply_extra /app/bin/apply_extra",
                "install -Dm755 cleanup-other-arches.sh /app/bin/cleanup-other-arches.sh",
                "install -Dm755 geogebra.sh /app/bin/geogebra",
                "install -Dm644 geogebra.desktop /app/share/applications/org.geogebra.GeoGebra.desktop",
                "install -Dm644 geogebra-scalable.svg /app/share/icons/hicolor/scalable/apps/org.geogebra.GeoGebra.svg",
                "install -Dm644 appdata.xml /app/share/appdata/org.geogebra.GeoGebra.appdata.xml"
            ]
        }
    ]
}

